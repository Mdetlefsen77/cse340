<main class="register-main">
    <h1>
        <%= title %>
    </h1>
    <div class="register-container">
        <%- messages() %>
            <p class="required-fields"><em>*ALL FIELDS ARE REQUIRED.</em></p>
            <form class="register-form" action="/account/register" method="POST">
                <label for="account_firstname">First name:</label>
                <input type="text" id="account_firstname" name="account_firstname"
                    value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>" required>

                <label for="account_lastname">Last name:</label>
                <input type="text" id="account_lastname" name="account_lastname"
                    value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>" required>

                <label for="account_email">Email Address:</label>
                <input type="email" id="account_email" name="account_email"
                    value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" required>

                <label for="account_password">Password:</label>
                <input type="password" id="account_password" name="account_password" required>

                <p class="password-hint">
                    Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special
                    character.
                </p>

                <button type="button" id="pswdBtn" onclick="togglePassword()">Show Password</button>
                <button type="submit">Register</button>
            </form>
    </div>
</main>

<script src="/js/script.js"></script>