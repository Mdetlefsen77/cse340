<h1>
    <%= title %>
</h1>

<%- messages() %>
    <% if (errors) { %>
        <ul class="error-messages">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <p class="required-fields"><em>*ALL FIELDS ARE REQUIRED.</em></p>
            <form class="border" action="/inv/add-inventory" method="post">
                <label>
                    <%- classificationList %>
                </label>

                <label>Make:
                    <input type="text" name="inv_make" required placeholder="Min of 3 characters"
                        value="<%= locals.inv_make %>">
                </label>

                <label>Model:
                    <input type="text" name="inv_model" required placeholder="Min of 3 characters"
                        value="<%= locals.inv_model %>">
                </label>

                <label>Description:
                    <textarea name="inv_description" required
                        placeholder="Description"><%= locals.inv_description %></textarea>
                </label>

                <label>Image Path:
                    <input type="text" name="inv_image" required placeholder="/images/vehicles/no-image.png"
                        value="<%= locals.inv_image %>">
                </label>

                <label>Thumbnail Path:
                    <input type="text" name="inv_thumbnail" required placeholder="/images/vehicles/no-image.png"
                        value="<%= locals.inv_thumbnail %>">
                </label>

                <label>Price:
                    <input type="number" name="inv_price" required placeholder="decimal or integer"
                        value="<%= locals.inv_price %>">
                </label>

                <label>Year:
                    <input type="number" name="inv_year" required placeholder="4-digit year"
                        value="<%= locals.inv_year %>">
                </label>

                <label>Miles:
                    <input type="number" name="inv_miles" required placeholder="digits only"
                        value="<%= locals.inv_miles %>">
                </label>

                <label>Color:
                    <input type="text" name="inv_color" required placeholder="Color" value="<%= locals.inv_color %>">
                </label>

                <input type="submit" value="Add Inventory Item">
            </form>