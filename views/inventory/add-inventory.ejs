<h1>
    <%= title %>
</h1>

<%- messages() %>
    <% if (errors) { %>
        <ul class="error-messages">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <p class="required-fields"><em>*ALL FIELDS ARE REQUIRED.</em></p>
            <form id="addInventoryForm" class="border" action="/inv/add-inventory" method="post">
                <label>
                    <%- classificationList %>
                </label>

                <label>Make:
                    <input type="text" name="inv_make" id="inv_make" required placeholder="Min of 3 characters"
                        pattern="[A-Za-z\s]{3,}" title="Make must be at least 3 alphabetic characters"
                        value="<%= locals.inv_make %>">
                </label>

                <label>Model:
                    <input type="text" name="inv_model" id="inv_model" required placeholder="Min of 3 characters"
                        pattern="[A-Za-z0-9\s\-]{3,}" title="Model must be at least 3 characters"
                        value="<%= locals.inv_model %>">
                </label>

                <label>Description:
                    <textarea name="inv_description" id="inv_description" required minlength="1"
                        placeholder="Description"><%= locals.inv_description %></textarea>
                </label>

                <label>Image Path:
                    <input type="text" name="inv_image" id="inv_image" required
                        placeholder="/images/vehicles/no-image.png" pattern="^\/images\/.*\.(png|jpg|jpeg|gif|webp)$"
                        title="Must be a valid image path starting with /images/" value="<%= locals.inv_image %>">
                </label>

                <label>Thumbnail Path:
                    <input type="text" name="inv_thumbnail" id="inv_thumbnail" required
                        placeholder="/images/vehicles/no-image-tn.png" pattern="^\/images\/.*\.(png|jpg|jpeg|gif|webp)$"
                        title="Must be a valid image path starting with /images/" value="<%= locals.inv_thumbnail %>">
                </label>

                <label>Price:
                    <input type="number" name="inv_price" id="inv_price" required placeholder="decimal or integer"
                        min="0" step="0.01" title="Price must be a positive number" value="<%= locals.inv_price %>">
                </label>

                <label>Year:
                    <input type="number" name="inv_year" id="inv_year" required placeholder="4-digit year" min="1900"
                        max="2100" pattern="[0-9]{4}" title="Year must be a 4-digit number"
                        value="<%= locals.inv_year %>">
                </label>

                <label>Miles:
                    <input type="number" name="inv_miles" id="inv_miles" required placeholder="digits only" min="0"
                        step="1" title="Miles must be a positive whole number" value="<%= locals.inv_miles %>">
                </label>

                <label>Color:
                    <input type="text" name="inv_color" id="inv_color" required placeholder="Color"
                        pattern="[A-Za-z\s]{2,}" title="Color must be at least 2 alphabetic characters"
                        value="<%= locals.inv_color %>">
                </label>

                <input type="submit" value="Add Inventory Item">
            </form>

            <script src="/js/inventory-validation.js"></script>